{% from 'components/back-link/macro.njk' import backLink %}

{% macro bcErrorPage(params) %}
  <div class="nhsuk-width-container nhsuk-u-margin-top-4 nhsuk-u-margin-bottom-4 bc-c-error-container nhsuk-u-padding-4">
    <div data-test-id="error-back-link">
      {{ backLink({
        "href": params.backLink.href,
        "text": params.backLink.text
      }) }}
    </div>
    <h1 class="nhsuk-heading-l nhsuk-u-margin-top-5" data-test-id="error-title">{{ params.error.title | safe }}</h1>
    <p data-test-id="error-description">{{ params.error.description | safe }}</p>
    {% if params.error.stackTrace %}
      <h2 class="nhsuk-heading-2 nhsuk-u-margin-top-5" data-test-id="stackTrace-heading">Stack Trace</h2>
      <p data-test-id="error-stackTrace">{{ params.error.stackTrace | safe }}</p>
    {% endif %}
    {% if params.error.data %}
      <pre>{{ params.error.data }}</pre>
    {% endif %}
  </div>
{% endmacro %}
