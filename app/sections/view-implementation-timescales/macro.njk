{% from 'components/view/components/view-epics/macro.njk' import viewEpics %}
{% from 'components/view/components/view-section-heading/macro.njk' import viewSectionHeading %}
{% from 'components/view/components/view-data-text/macro.njk' import viewDataText %}

{% macro viewImplementationTimescales(params) %}
  {% if params and params.section.answers.description %}
    <div class="nhsuk-width-container" data-test-id="view-implementation-timescales">
      {{ viewSectionHeading({ text: 'Implementation timescales' }) }}
      <div class="nhsuk-grid-row nhsuk-u-padding-left-3 nhsuk-u-padding-right-3">
        {{ viewDataText({
          dataTestId: 'view-implementation-timescales-guidance',
          data: 'These are the typical processes and timescales to implement this Catalogue Solution:',
          classes: 'bc-t-font-color--grey-1 nhsuk-u-margin-bottom-3 nhsuk-grid-column-two-thirds'
        }) }}
        <div class="nhsuk-grid-column-two-thirds">
          {{ viewDataText({
            dataTestId: 'view-question-data-text-description',
            data: params.section.answers.description
          }) }}
        </div>
      </div>
    </div>
  {% endif %}
{% endmacro %}
