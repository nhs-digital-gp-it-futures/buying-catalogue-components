{% from 'components/button/macro.njk' import button %}

{% macro bcButton(params) %}

  {% set disableButton = false %}
  {% if params.disabled and params.disabled === "true" or params.disabled === true %}
    {% set disableButton = true %}
  {% endif %}

  {% set altText = params.text %}
  {% if params.altText %}
    {% set altText = params.altText %}
  {% endif %}

  <div data-test-id="{{ params.dataTestId }}" aria-label="{{ altText }}">
    {{ button({
      text: params.text,
      classes: params.classes,
      href: params.href,
      disabled: disableButton,
      attributes: params.attributes
    }) }}
  </div>
{% endmacro %}
