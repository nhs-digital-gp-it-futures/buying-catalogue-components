{% from 'components/view-section-table-row/macro.njk' import viewSectionTableRow %}
{% from 'components/view-data-text/macro.njk' import viewDataText %}
{% from 'components/view-data-link/macro.njk' import viewDataLink %}
{% from 'components/view-section-heading/macro.njk' import viewSectionHeading %}
{% from 'sections/view-supplier-asserted-integrations/macro.njk' import viewSupplierAssertedIntegrations %}

{% macro viewIntegrations(params) %}
  {% if params and params.section.answers.link %}
    <div data-test-id="view-integrations" class="nhsuk-width-container nhsuk-summary-list">
      {{ viewSectionHeading({ text: 'Integrations' }) }}
      <div class="nhsuk-u-padding-left-3">
        {{ viewDataText({
          dataTestId: 'view-section-integrations-additional-information',
          data: 'View information about the systems this Catalogue Solution integrates with to exchange data:'
        }) }}
        {{ viewSupplierAssertedIntegrations({
          section: params.section.answers
        })}}
      </div>
    </div>
  {% endif %}
{% endmacro %}
