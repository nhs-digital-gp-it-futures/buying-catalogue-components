{% from 'components/view-data-title/macro.njk' import viewDataTitle %}
{% from 'components/view-data-link/macro.njk' import viewDataLink %}
{% from 'components/view-data-text/macro.njk' import viewDataText %}
{% from 'components/view-section-heading/macro.njk' import viewSectionHeading %}

{% macro viewSolutionDescription(params) %}
  {% if params.section %}
    <div class="nhsuk-width-container" data-test-id="view-solution-description">
      {{ viewSectionHeading({ text: 'Description' }) }}
      <div class="nhsuk-grid-row nhsuk-u-padding-left-3">
        <div class="nhsuk-u-margin-bottom-4 nhsuk-grid-column-two-thirds">
          {% if params.section.answers.summary %}
            <div data-test-id="view-section-question-summary">
                {{ viewDataTitle({
                  dataTestId: 'view-question-title',
                  title: 'Summary'
                }) }}
                {{ viewDataText({
                  dataTestId: 'view-question-data-text-summary',
                  data: params.section.answers.summary
                }) }}
            </div>
          {% endif %}

          {% if params.section.answers.description %}
            <div data-test-id="view-section-question-description" class="nhsuk-u-margin-top-4">
                {{ viewDataTitle({
                  dataTestId: 'view-question-title',
                  title: 'Full description'
                }) }}
                {{ viewDataText({
                  dataTestId: 'view-question-data-text-description',
                  data: params.section.answers.description
                }) }}
            </div>
          {% endif %}

          {% if params.section.answers.link %}
            <div data-test-id="view-section-question-link" class="nhsuk-u-margin-top-4">
              {{ viewDataLink({
                dataTestId: 'view-question-data-link',
                data: params.section.answers.link
              }) }}
            </div>
          {% endif %}
        </div>
      </div>

    </div>
  {% endif %}
{% endmacro %}
