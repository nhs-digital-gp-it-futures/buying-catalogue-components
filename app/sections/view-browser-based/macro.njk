{% from 'components/view-section-table-row/macro.njk' import viewSectionTableRow %}
{% from 'components/view-data-bulletlist/macro.njk' import viewDataBulletlist %}
{% from 'components/view-data-text/macro.njk' import viewDataText %}

{% macro viewBrowserBased(params) %}
  <div data-test-id="view-section-table-browser-based" class="nhsuk-summary-list">
    {{ viewSectionTableRow({
      questionId: 'supported-browsers',
      questionTitle: 'Supported browser types',
      innerComponent: viewDataBulletlist({
        dataTestId: 'view-question-data-bulletlist',
        data: params.section.sections['browser-browsers-supported'].answers['supported-browsers']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'mobile-responsive',
      questionTitle: 'Mobile responsive',
      innerComponent: viewDataText({
        dataTestId: 'view-question-data-text-mobile-responsive',
        data: params.section.sections['browser-browsers-supported'].answers['mobile-responsive']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'mobile-first-design',
      questionTitle: 'Mobile first approach',
      innerComponent: viewDataText({
        dataTestId: 'view-question-data-text-mobile-first-design',
        data: params.section.sections['browser-mobile-first'].answers['mobile-first-design']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'plugins-required',
      questionTitle: 'Plug-ins or extensions required',
      innerComponent: viewDataText({
        dataTestId: 'view-question-data-text-plugins-required',
        data: params.section.sections['browser-plug-ins-or-extensions'].answers['plugins-required']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'plugins-detail',
      questionTitle: 'Additional information about plug-ins or extensions',
      layout: 'vertical',
      innerComponent: viewDataText({
        dataTestId: 'view-question-data-text-plugins-detail',
        data: params.section.sections['browser-plug-ins-or-extensions'].answers['plugins-detail']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'minimum-connection-speed',
      questionTitle: 'Minimum connection speed',
      innerComponent: viewDataText({
        dataTestId: 'view-question-data-text-minimum-connection-speed',
        data: params.section.sections['browser-connectivity-and-resolution'].answers['minimum-connection-speed']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'minimum-desktop-resolution',
      questionTitle: 'Screen resolution and aspect ratio',
      innerComponent: viewDataText({
        dataTestId: 'view-question-data-text-minimum-desktop-resolution',
        data: params.section.sections['browser-connectivity-and-resolution'].answers['minimum-desktop-resolution']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'hardware-requirements-description',
      questionTitle: 'Hardware requirements',
      layout: 'vertical',
      innerComponent: viewDataText({
        dataTestId: 'view-question-data-text-hardware-requirements-description',
        data: params.section.sections['browser-hardware-requirements'].answers['hardware-requirements-description']
      })
    }) }}
    {{ viewSectionTableRow({
      questionId: 'additional-information',
      questionTitle: 'Additional information',
      layout: 'vertical',
      innerComponent: viewDataText({
        dataTestId: 'view-question-data-text-additional-information',
        data: params.section.sections['browser-additional-information'].answers['additional-information']
      })
    }) }}
  </div>
{% endmacro %}
