{% from 'components/view/view-section-table-row/macro.njk' import viewSectionTableRow %}
{% from 'components/view/view-data-text/macro.njk' import viewDataText %}
{% from 'components/view/view-data-link/macro.njk' import viewDataLink %}

{% macro viewHostingTypeOnPremise(params) %}
  <dl data-test-id="view-section-table-hosting-type-on-premise" class="nhsuk-summary-list">
    {{ viewSectionTableRow({
        questionId: 'summary',
        questionTitle: 'Summary',
        layout: 'vertical',
        innerComponent: viewDataText({
          dataTestId: 'view-question-data-text-summary',
          data: params.section.answers['summary']
        }) + viewDataLink({
          dataTestId: 'view-question-data-text-link',
          data: params.section.answers['link']
        })
      })
    }}
    {{ viewSectionTableRow({
        questionId: 'hosting-model',
        questionTitle: 'Data center hosting model',
        layout: 'vertical',
        innerComponent: viewDataText({
          dataTestId: 'view-question-data-text-hosting-model',
          data: params.section.answers['hosting-model']
        })
      })
    }}
    {{ viewSectionTableRow({
        questionId: 'requires-hscn',
        layout: 'vertical',
        innerComponent: viewDataText({
          dataTestId: 'view-question-data-text-requires-hscn',
          data: params.section.answers['requires-hscn'],
          classes: 'nhsuk-u-font-weight-bold'
        })
      })
    }}
  </dl>
{% endmacro %}
