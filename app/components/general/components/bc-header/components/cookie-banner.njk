{% from 'components/button/macro.njk' import button %}

{% macro cookieBanner(params) %}

  <section data-test-id="cookie-banner" class="bc-c-cookies nhsuk-header--white nhsuk-u-padding-top-3" aria-labelledby="cookies" role="banner">

    <div class="nhsuk-width-container">
      <h2 class="nhsuk-heading-m">Cookies on the Buying Catalogue</h2>
      <p class="hsuk-body">We've put small files called cookies on your device to make the Buying Catalogue website work.</p>
      <p class="hsuk-body">You can read more about our <a href="{{ params.href }}">cookies and privacy policy</a>.</p>

      <div data-test-id="cookie-dismiss">
        {{ button({
          text: "Dismiss",
          classes: "nhsuk-button--primary",
          href: params.dismissHref
        }) }}
      </div>
    </div>

  </section>

{% endmacro %}
